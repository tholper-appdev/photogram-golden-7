<div class="container">
<h1>Edit Photo <%= @id %></h1>

<form action="/update_photo/<%= @id %>">
  <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" type="text" name="the_source"  value = "<%= @source %>">
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" name="the_caption" value = "<%= @caption %>">
  </div>

  <button>
    Update Photo
  </button>
</form>

</div>

